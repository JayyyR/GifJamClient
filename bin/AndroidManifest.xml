<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jayyyR.gifjam"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/gifjam_icon"
        android:label="@string/app_name"
        android:theme="@style/MyTheme" >
        <activity
            android:name="com.jayyyR.gifjam.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.jayyyR.gifjam.CameraActivity"
            android:label="@string/title_activity_camera" >
        </activity>
        <activity
            android:name="com.jayyyR.gifjam.SendVideo"
            android:label="@string/title_activity_send_video" >
        </activity>
        <activity
            android:name="com.jayyyR.gifjam.Login"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jayyyR.gifjam.Profile"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name="com.jayyyR.gifjam.Search"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name="com.jayyyR.gifjam.Register"
            android:label="@string/title_activity_register" >
        </activity>
    </application>

</manifest>